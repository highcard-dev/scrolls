name: registry-1.docker.io/highcard/scroll-lgsm
desc: {{ .Version }}
version: 0.0.2
app_version: {{ .Version }}
init: "main.start"
processes:
  main:
    commands:
      start:
        needs: [main.install]
        run: restart
        procedures:
          - mode: exec
            data:
              - ./{{ .Version }}
              - start
          - mode: exec-tty
            data:
              - ./{{ .Version }}
              - console
      stop:
        procedures:
          - mode: exec
            data:
              - ./{{ .Version }}
              - stop
      install:
        run: once
        procedures:
          - mode: exec
            data:
              - sh
              - install-lgsm.sh
          - mode: exec
            data:
              - ./linuxgsm.sh
              - {{ .Version }}
          - mode: exec
            data:
              - ./{{ .Version }}
              - auto-install
