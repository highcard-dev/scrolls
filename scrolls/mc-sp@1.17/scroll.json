{
  "name": "mc-sp",
  "desc": "Minecraft Spigot",
  "version": "0.0.8",
  "processes": {
    "main": {
      "commands": {
        "start": {
          "type": "start",
          "procedures": [
            {
              "mode": "exec",
              "data": ["java", "-jar", "spigot.jar", "nogui"]
            }
          ]
        },
        "stop": {
          "type": "stop",
          "procedures": [
            {
              "mode": "rcon",
              "data": "stop"
            }
          ]
        },
        "install": {
          "type": "install",
          "procedures": [
            {
              "mode": "exec",
              "data": [
                "wget",
                "-O",
                "spigot.jar",
                "https://download.getbukkit.org/spigot/spigot-1.17.jar"
              ]
            },
            {
              "mode": "exec",
              "data": ["bash", "-c", "echo eula=true > eula.txt"]
            }
          ]
        },
        "update": {
          "type": "update",
          "procedures": [
            {
              "mode": "exec",
              "data": ["sh", "$DRUID_SCROLL_DIR/update.sh"]
            },
            {
              "mode": "exec",
              "data": ["bash", "-c", "echo eula=true > eula.txt"]
            }
          ]
        }
      }
    }
  },
  "plugins": {
    "rcon": {
      "address": "localhost:25575",
      "password": "$DRUID_INIT_RCON_PASSWORD"
    }
  }
}
