name: registry-1.docker.io/highcard/scroll-minecraft-spigot
desc: Minecraft Spigot
version: 0.0.1
app_version: {{ .Version }}
init: "main.start"
processes:
  main:
    commands:
      start:
        need: [main.install]
        run: restart
        procedures:
          - mode: exec
            data:
              - bash
              - ./start.sh
      stop:
        procedures:
          - mode: rcon
            data: stop
      install:
        run: once
        procedures:
          - mode: exec
            data:
              - wget
              - -q
              - -O
              - spigot.jar
              - https://s3.eu-central-1.wasabisys.com/druid-scroll-artifacts/minecraft/spigot/spigot-{{ .Version }}.jar
          - mode: exec
            data:
              - bash
              - -c
              - echo eula=true > eula.txt
      update:
        procedures:
          - mode: exec
            data:
              - sh
              - $SCROLL_DIR/update.sh
          - mode: exec
            data:
              - bash
              - -c
              - echo eula=true > eula.txt
{{- if .Artifacts }}
  scroll-switch:
    commands:
{{- range $k, $v  := .Artifacts }}
      {{ $v }}:
        procedures:
          - mode: exec
            data:
              - sh
              - $SCROLL_DIR/scroll-switch/minecraft-spigot@{{ $k }}/scroll-switch.sh
          - mode: scroll-switch
            data: {{ $v }}
{{- end }}
{{- end }}
plugins:
  rcon: {}
